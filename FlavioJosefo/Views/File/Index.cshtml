
@{
    ViewBag.Title = "Upload File";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label for="file">Select a .txt file</label>
    <input type="file" name="file" accept="application/txt" required />
    <br />
    <b>@ViewBag.mensaje</b>

    <label for="jump">Jump</label>
    <input type="number" name="jump" min="2" value="2" required />

    <br />
    <input type="submit" value="Upload" />




}